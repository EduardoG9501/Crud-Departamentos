<% include partials/_header %>


<div class="container">
<div class="row mt-5" >
<div class="col-md-7">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>N°</th>
                <th>Nombre Departamento</th>
                <th>Municipio</th>
                <th>Código Postal</th>
                <th>Edición/Eliminar</th>
            </tr>
        </thead>
        <tbody>
                <% if (data) { %>
                    <% for(var i = 0; i < data.length; i++) { %>
                      <tr>
                        <td><%= (i + 1) %></td>
                        <td><%= data[i].name %></td>
                        <td><%= data[i].municipio %></td>
                        <td><%= data[i].postal %></td>
                        <td>
                            <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                            <a href="/update/<%= data[i].id %>" class="btn btn-info">Actualizar</a>
                        </td>
                        
                        
                       
                      </tr>
               <% } %> 
           <% } %>
        </tbody>
    </table>

</div>
<div class="col-md-5">
    <div class="card">
        <div class="card-body">
                <form action="/add" method="post">
                    <div class="form-group">
                        <input type="text" name="name" placeholder="Nombre Departamento" class="form-control">
                    </div>
                    <div class="form-group">
                            <input type="text" name="municipio" placeholder="Municipio" class="form-control">
                        </div>
                        <div class="form-group">
                                <input type="text" name="postal" placeholder="Postal" class="form-control">
                            </div>
                        <button type="submit" class="btn btn-primary">
                            Guardar Departamento
                        </button>
                </form>
        </div>
    </div>                        
    
</div>
</div>
</div>

<% include partials/_footer %>

